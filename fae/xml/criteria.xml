<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE criteria SYSTEM "criteria.dtd">

<criteria>

<!-- NAVIGATION &amp; ORIENTATION -->

<!-- unique titles -->
<eval id="nav001s">
  <pass><cmp op="eq" ref="pct1" val="100"/></pass>
  <warn>
    <and>
      <cmp op="ge" ref="pct1" val="90"/>
      <cmp op="lt" ref="pct1" val="100"/>
    </and>
  </warn>
  <!-- no title elements found -->
  <null><cmp op="eq" ref="tot1" val="0"/></null>
</eval>

<!-- one or two h1 elements -->
<eval id="nav002p">
  <pass>
    <or>
      <cmp op="eq" ref="cnt1" val="1"/>
      <cmp op="eq" ref="cnt1" val="2"/>
    </or>
  </pass>
  <warn><cmp op="eq" ref="cnt1" val="3"/></warn>
  <fail><cmp op="ge" ref="cnt1" val="4"/></fail>
  <null><cmp op="eq" ref="cnt1" val="0"/></null>
</eval>

<eval id="nav002s">
  <pass><cmp op="eq" ref="pct1" val="100"/></pass>
</eval>

<!-- ol/ul navigation menus preceded by header element -->
<eval id="nav003p">
  <pass><cmp op="eq" ref="pct1" val="100"/></pass>
  <warn><cmp op="lt" ref="pct1" val="100"/></warn>
  <disc><cmp op="eq" ref="tot1" val="0"/></disc>
</eval>

<eval id="nav003s">
  <pass><cmp op="eq" ref="pct1" val="100"/></pass>
  <warn><cmp op="lt" ref="pct1" val="100"/></warn>
  <disc><cmp op="eq" ref="tot1" val="0"/></disc>
</eval>

<!-- pct. content in headers -->
<eval id="nav004p">
  <pass>
    <and>
      <cmp op="ge" ref="pct1" val="1"/>
      <cmp op="le" ref="pct1" val="20"/>
    </and>
  </pass>
  <warn>
    <and>
      <cmp op="gt" ref="pct1" val="20"/>
      <cmp op="le" ref="pct1" val="50"/>
    </and>
  </warn>
  <null><cmp op="eq" ref="tot2" val="0"/></null>
</eval>

<eval id="nav004s">
  <pass>
    <and>
      <cmp op="ge" ref="pct1" val="1"/>
      <cmp op="le" ref="pct1" val="20"/>
    </and>
  </pass>
  <warn>
    <and>
      <cmp op="gt" ref="pct1" val="20"/>
      <cmp op="le" ref="pct1" val="50"/>
    </and>
  </warn>
</eval>

<!-- accesskey 1 defined -->
<eval id="nav005p">
